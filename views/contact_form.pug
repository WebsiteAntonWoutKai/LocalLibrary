extends layout 

block content 
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(for='email') Email: 
            input#email.form-control(type='text', placeholder='Dwight.Schrute@DunderMifflin.com' autofocus name='email' required='true' value=(undefined===contact ? '' : contact.email))
        div.form-group
            label(for='subject') Subject:
            input#subject.form-control(typr='text', placeholder='Other' name='subject' value=(undefined==contact ? '' : contact.subject))
        div.form-group
            label(for='message') Message: 
            textarea#message.form-control(typr='textarea', placeholder='Message' name='message' required='true' value=(undefined==contact ? '' : contact.message))
        div.form-group.my-2
            button.btn.btn-secondary(type='submit') Submit
    
    if errors
        ul 
            for error in errors 
                li error.msg 