extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/users/login")
            #error
                if error
                    p.text-danger #{error}

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) #{title}
    

            label(for='email') Email: 
            input#email.form-control(type='text', placeholder='Dwight.Schrute@DunderMifflin.com' name='email' required='true' autofocus value=(undefined===user ? '' : user.email))
        
            label(for="password") Password:
            input#password.form-control(type="password" name="password" placeholder="Password" required='true' value=(undefined===user ? '' : user.password))

            input(type='hidden' name="_csrf" value=_csrf)

            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button.btn.btn-secondary(type='submit') Login

    div.text-center
            
            a(class buttonClass, type='submit', href='/users/register') Register
    
