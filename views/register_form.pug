extends layout

block content
    h1=title

    form(method='POST' action='/users/register')
        div.form-group
            label(for='first_name') First Name:
            input#first_name.form-control(type='text', placeholder='First name (Dwight)' name='first_name' autofocus required='true' value=(undefined===user ? '' : user.first_name) )
            label(for='family_name') Family Name:
            input#family_name.form-control(type='text', placeholder='Family name (Schrute)' name='family_name' required='true' value=(undefined===user ? '' : user.family_name))
        div.form-group
            label(for='date_of_birth') Date of birth:
            input#date_of_birth.form-control(type='date', name='date_of_birth' value=(undefined===user ? '' : user.date_of_birth_yyyy_mm_dd))
        div.form-group
            label(for='email') Email: 
            input#email.form-control(type='text', placeholder='Dwight.Schrute@DunderMifflin.com' name='email' required='true' value=(undefined===user ? '' : user.email))
        div.form-group 
            label(for='password') Password:
            input#password.form-control(type='password', placeholder="8 characters long" name='password' required='true', value=(undefined===user ? '' : user.password))
        dif.form-group 
            label(for='confirmPassword') Confirm Password:
            input#confirmPassword.form-control(type='password', placeholder="8 characters long" name='confirmPassword' required='true', value=(undefined===user ? '' : user.confirmPassword))
        div.form-group 
            label(for='address') Address:
            input#address.form-control(type='text', placeholder="Address" name='address')
        div.form-group 
            label(for='country') Country:
            input#country.form-control(type='text', placeholder="Country" name='country' required='true', value=(undefined===user ? '' : user.country))
        dif.form-group 
            label(for='city') City:
            input#city.form-control(type='text', placeholder="City" name='city' required='true', value=(undefined===user ? '' : user.city))
        div.form-group 
            label(for='street') Street:
            input#street.form-control(type='text', placeholder="Street" name='street' required='true', value=(undefined===user ? '' : user.street))
        div.form-group 
            label(for='number') House Number:
            input#number.form-control(type='number', placeholder="House number" name='number' required='true', value=(undefined===user ? '' : user.number))

        //input(type='hidden' name="_csrf" value=_csrf)
        div.form-group.my-2
            button.btn.btn-secondary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg