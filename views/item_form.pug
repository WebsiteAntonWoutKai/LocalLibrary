extends layout

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#title.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name) )
        div.form-group
            label(for='price') Price:
            textarea#price.form-control(type='textarea', placeholder='Price' name='price' required='true') #{undefined===item ? '' : item.price}
        div.form-group
            label(for='summary') Summary:
            textarea#summary.form-control(type='textarea', placeholder='Summary' name='summary' required='true') #{undefined===item ? '' : item.summary}
        div.form-group
            label(for='amountInStock') amountInStock:
            input#amountInStock.form-control(type='text', placeholder='amountInStock' name='amountInStock' value=(undefined===item ? '' : item.amountInStock) required='true')
        <div>
            <label>Image</label>
            <input type="file" name="image" class="filepond">
        div.form-group
            label Category:
            div
                for category in categories
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
                        label(for=category._id) #{category.name}
        
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg