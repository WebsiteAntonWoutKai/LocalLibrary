extends layout

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#title.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name) )
        div.form-group
            label(for='price') Price:
            input#price.form-control(type='number', placeholder='Price' name='price' min=0 required='true' value=(undefined===item ? '' : item.price))
        div.form-group
            label(for='summary') Summary:
            textarea#summary.form-control(type='textarea', placeholder='Summary' name='summary' required='true' value=(undefined===item ? '' : item.summary))
        div.form-group
            label(for='stock') Stock:
            div.form-group
                label(for='stockLarge') Large: 
                input#stockLarge.form-control(type='number', placeholder='Amount' name='stockLarge' min=0 required='true' value=(undefined===item ? '' : item.stockLarge))
                label(for='stockMedium') Medium: 
                input#stockMedium.form-control(type='number', placeholder='Amount' name='stockMedium' min=0 required='true' value=(undefined===item ? '' : item.stockMedium))
                label(for='stockSmall') Small: 
                input#stockSmall.form-control(type='number', placeholder='Amount' name='stockSmall' min=0 required='true' value=(undefined===item ? '' : item.stockSmall))

        div.form-group
            label Category:
            div
                for category in categories
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
                        label(for=category._id) #{category.name}
        <div>
            <label>Image</label>
            <input type="file" name="image" class="filepond">
        
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg